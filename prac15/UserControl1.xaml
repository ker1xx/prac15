<UserControl x:Class="prac15.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prac15"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="Checker" Grid.ColumnSpan="2" VerticalAlignment="Center" MinWidth="40" MinHeight="40"/>
         <Image x:Name="img" Grid.Column="0" Margin="40,0,0,0"/>
        <TextBlock x:Name="Name" Grid.Column="1" VerticalAlignment="Center" FontSize="30" Padding="10"></TextBlock>
    </Grid>
</UserControl>
